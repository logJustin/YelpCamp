<% layout('layouts/boilerplate') %>




<div class="container col-12 d-flex justify-content-center align-items-center mt-5">
  <div class="row w-100">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="https://images.unsplash.com/photo-1588585954086-ccdb0b57d266?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" alt="" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title">Register</h5>
          <form action="/register" class="validated-form" method="POST" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" autofocus required>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input class="form-control" type="email" id="email" name="email" required>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" required>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid mt-4">
              <button class="btn btn-success">Register</button>
            </div>
          </form>
        </div>


      </div>
    </div>
  </div>
</div>