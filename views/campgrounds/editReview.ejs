<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">


<div class="row">
  <div class="col-lg-6 offset-lg-3 my-5">
    <div class="card shadow">
      <div class="card-body">

        <% if (currentUser) { %>

        <div class="card-body">
          <h5 class="card-title text-center">Edit Your Review</h5>
          <div class="d-flex align-items-center justify-content-center">
            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
              <fieldset class="starability-checkmark">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" <% if (review.rating===1) {%>checked<% } %> />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" <% if (review.rating===2) {%>checked<% } %> />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" <% if (review.rating===3) {%>checked<% } %> />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" <% if (review.rating===4) {%>checked<% } %> />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" <% if (review.rating===5) {%>checked<% } %> />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
          </div>


          <div class="my-3">
            <label class="form-label" for="body">Review Description</label>
            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required><%= review.body %></textarea>
            <div class="valid-feedback">Looks good!</div>
          </div>

          <div class="d-grid">
            <button class="btn btn-success">Submit</button>
          </div>
        </div>


        </form>
        <% } %>


      </div>
    </div>
  </div>
</div>